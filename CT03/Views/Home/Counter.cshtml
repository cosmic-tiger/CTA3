@{
    ViewData["Title"] = "Counter";
}

<main id="counterMain" data-view-init="setupCounterView" class="container py-4 border rounded">
    <h2>Counter</h2>
    <p id="counterValue" class="fs-3 text-primary">0</p>

    <button id="incrementBtn" class="btn btn-success me-2">
        <i class="bi bi-plus-circle me-1"></i> +1
    </button>

    <button id="resetBtn" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-counterclockwise me-1"></i> Reset
    </button>
</main>